{
  "name": "@stardust-collective/dag4",
  "version": "1.0.0",
  "description": "Constellation HyperGraph JavaScript API",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/ src/core src/keystore src/network",
    "prebuild": "npm run clean && npm run copy-src",
    "build": "tsc && rollup -c scripts/config/rollup.config.js && rollup -c scripts/config/rollup.config.js --environment NODE_ENV:production",
    "bes2018": "tsc --target es2018 --outDir dist/esm2015",
    "postbuild": "node scripts/copy",
    "prerelease": "npm run build",
    "release": "standard-version",
    "postrelease2": "node scripts/copy && node scripts/build",
    "postrelease": "node scripts/copy && node scripts/build && npm run release:github && npm run release:npm",
    "release:github": "git push --no-verify --follow-tags origin master",
    "release:npm": "npm publish dist",
    "release:preflight": "npm pack ./dist --dry-run",
    "copy-src": "npm run copy-core && npm run copy-keystore && npm run copy-network",
    "copy-core": "copyfiles --up 3 \"packages/dag4-core/src/**/*.ts\" src/core",
    "copy-keystore": "copyfiles --up 3 \"packages/dag4-keystore/src/**/*.ts\" src/keystore",
    "copy-network": "copyfiles --up 3 \"packages/dag4-network/src/**/*.ts\" src/network"
  },
  "author": "Frank Fox",
  "license": "MIT",
  "email": "ffox77@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StardustCollective/dag4.js.git"
  },
  "bugs": {
    "url": "https://github.com/StardustCollective/dag4.js/issues"
  },
  "homepage": "https://github.com/StardustCollective/dag4.js#readme",
  "dependencies": {
    "bip39": "^3.0.2",
    "bn.js": "^5.1.3",
    "bs58": "^4.0.1",
    "buffer": "^5.6.0",
    "create-hash": "^1.2.0",
    "create-hmac": "^1.1.7",
    "d3": "^6.3.1",
    "elliptic": "^6.5.3",
    "eth-lib": "^0.1.29",
    "ethereumjs-wallet": "^1.0.1",
    "js-sha256": "^0.9.0",
    "js-sha512": "^0.8.0",
    "pbkdf2": "^3.0.9",
    "randombytes": "^2.0.1",
    "rxjs": "^6.6.3",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.11.2",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript-paths": "^1.2.2",
    "rollup-plugin-uglify": "^6.0.4",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack-config-utils": "^2.3.1"
  }
}
